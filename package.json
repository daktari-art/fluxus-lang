{
  "name": "@fluxus-lang/core",
  "version": "4.3.0",
  "description": "Reactive Stream Programming Language - Where Time and Data are Unified in a non-blocking flow.",
  "main": "src/cli.js",
  "type": "module",
  "bin": {
    "fluxus": "./bin/fluxus.js"
  },
  "scripts": {
    "postinstall": "echo 'FLUXUS INSTALLED'",
    "install:global": "node install.js --global",
    "start": "node src/cli.js",
    "test": "node test-run.js",
    "test:unit": "node --test test/unit/",
    "test:integration": "node --test test/integration/",
    "test:all": "npm run test:unit && npm run test:integration",
    "dev": "node --watch src/cli.js run examples/counter.flux",
    "repl": "node src/cli.js repl",
    "compile": "node src/cli.js compile examples/arithmetic.flux",
    "parse": "node src/cli.js parse examples/hello.flux",
    "examples": "node test-run.js",
    "tutorial": "node src/cli.js tutorial",
    "dashboard": "node src/cli.js dashboard",
    "profile": "node src/cli.js profile examples/arithmetic.flux",
    "coverage": "c8 node --test test/unit/ test/integration/"
    "integrate": "node scripts/validate-integration.js --auto-repair",
    "validate": "node scripts/validate-integration.js --strict",
    "orchestrate": "node -e \"import('./src/orchestrator.js').then(m => m.getOrchestrator().initialize())\"",
    "health": "node -e \"import('./src/orchestrator.js').then(async m => { const o = await m.getOrchestrator().initialize(); console.log(o.getHealthStatus()); })\""
  },
  "keywords": [
    "reactive-programming",
    "dataflow",
    "stream-programming",
    "functional-programming",
    "fluxus",
    "asynchronous",
    "termux",
    "mobile-development"
  ],
  "author": "Fluxus Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daktari-art/fluxus-lang.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src",
    "bin",
    "examples",
    "test",
    "*.md"
  ],
  "devDependencies": {
    "c8": "^8.0.0"
  }
}

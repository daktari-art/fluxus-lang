{
  "name": "@fluxus-lang/core",
  "version": "1.0.0",
  "description": "Reactive Stream Programming Language - Where Time and Data are Unified in a non-blocking flow.",
  "main": "src/cli.js",
  "type": "module",
  "bin": {
    "fluxus": "./src/cli.js"
  },
  "scripts": {
    "postinstall": "node install.js",
    "install:global": "node install.js --global",
    "start": "node src/cli.js",
    "test": "node test-run.js",
    "dev": "node --watch src/cli.js run examples/counter.flux",
    "repl": "node src/cli.js repl",
    "compile": "node src/cli.js compile examples/login.flux",
    "parse": "node src/cli.js parse examples/arithmetic.flux",
    "examples": "node src/cli.js run examples/hello.flux && node src/cli.js run examples/arithmetic.flux",
    "tutorial": "node src/cli.js tutorial",
    "dashboard": "node src/cli.js dashboard",
    "profile": "node src/cli.js profile examples/arithmetic.flux",
    "install-pkg": "node src/cli.js install",
    "uninstall-pkg": "node src/cli.js uninstall",
    "list-pkgs": "node src/cli.js list",
    "search-pkgs": "node src/cli.js search",
    "exit-help": "node src/exit_helper.js",
    "coverage": "node --test test-run.js"
  },
  "keywords": [
    "reactive-programming",
    "dataflow",
    "stream-programming",
    "functional-programming",
    "fluxus",
    "asynchronous",
    "termux",
    "mobile-development"
  ],
  "author": "Fluxus Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daktari-art/fluxus-lang.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src",
    "examples",
    "cli.js",
    "test-run.js",
    "install.js",
    "*.md"
  ],
  "dependencies": {},
  "devDependencies": {}
}
